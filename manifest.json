{
    "manifest_version": 3,
    "name": "Open in Slack App",
    "version": "1.2",
    "description": "Opens Slack links in the App using official Deep Link syntax.",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "storage",
      "contextMenus"
    ],
    "host_permissions": [
      "*://*.slack.com/*",
      "*://app.slack.com/*"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "Slack Opener Settings"
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "slack-opener@example.com",
        "strict_min_version": "109.0"
      }
    }
  }